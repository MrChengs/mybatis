<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lg.mapper.AuthorMapper">
   <select id="selectAllAuthors" resultType="Author">
       select * from author
   </select>
    <select id="selectAllAuthorsSet" resultType="Author">
        select * from author
    </select>
    <select id="selectAllAuthorsVector" resultType="Author">
        select * from author
    </select>
    <select id="selectAllAuthorsLinkedList" resultType="Author">
        select * from author
    </select>
    <select id="selectAllAuthorsArray" resultType="Author">
        select * from author
    </select>
    <select id="selectAuthor" parameterType="int" resultType="Author">
        select * from author where id=#{id}
    </select>
    <select id="selectAuthorLinkedHashMap" parameterType="int" resultType="java.util.LinkedHashMap">
        select * from author where id=#{id}
    </select>

    <insert id="insertAuthor" parameterType="Author">
        insert into author values(#{id},#{username},#{password},#{email},#{bio},#{favouriteSection});
    </insert>

    <update id="updateAuthor" parameterType="Author">
        update author
        <set>
            <if test="username != null"> username=#{username}</if>
            <if test="password != null"> password=#{password}</if>
            <if test="email != null"> email=#{email}</if>
            <if test="bio != null"> bio=#{bio}</if>
            <if test="favouriteSection != null"> favourite_section=#{favouriteSection}</if>
        </set>
        where id=#{id}
    </update>
    <delete id="deleteAuthor" parameterType="int">
        delete from author where id=#{id}
    </delete>
</mapper>