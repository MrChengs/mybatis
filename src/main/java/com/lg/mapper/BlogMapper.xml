<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lg.mapper.BlogMapper">
   <select id="selectAllPosts" resultType="hashmap">
       select * from post order by id
   </select>

    <select id="selectWithBothOneAndMany" resultMap="blogInfo">
        select * from post
    </select>
    <resultMap id="blogInfo" type="Blog">
        <id property="id" column="id"/>
        <result property="title" column="title"></result>
        <association property="author" column="author_id" select="com.lg.mapper.AuthorMapper.selectAuthor">

        </association>
<!--        <collection property="posts" select="com.lg.mapper.BlogMapper.selectPostsById">-->

<!--        </collection>-->
    </resultMap>

    <select id="selectBlog" parameterType="int" resultType="Blog">
        select * from blog where id=#{id}
    </select>
</mapper>